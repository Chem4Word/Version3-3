            <TabItem Name="Maintenance" Header="Maintenance">
                <Grid Margin="5">
                    <StackPanel>
                        <Label Content="You should back up the contents of these folders regularily." />
                        <GroupBox
                            BorderBrush="{StaticResource Chem4WordBlue}"
                            BorderThickness="2"
                            Header="Settings">
                            <DockPanel>
                                <Button
                                    x:Name="SettingsFolder"
                                    Width="120"
                                    Height="50"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Left"
                                    Click="OnClick_SettingsFolder"
                                    DockPanel.Dock="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            x:Name="SettingsFolderButtonImage"
                                            Width="32"
                                            Height="32"
                                            Margin="5"
                                            Source="/Resources/Button Images/Office-2016/File-Open.png" />
                                        <Label VerticalContentAlignment="Center" Content="Open" />
                                    </StackPanel>
                                </Button>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Text="This folder is where Chem4Word stores your personal settings."
                                    TextWrapping="Wrap" />
                            </DockPanel>
                        </GroupBox>
                        <GroupBox
                            BorderBrush="{StaticResource Chem4WordBlue}"
                            BorderThickness="2"
                            Header="Library">
                            <DockPanel>
                                <Button
                                    x:Name="LibraryFolder"
                                    Width="120"
                                    Height="50"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Left"
                                    Click="OnClick_LibraryFolder"
                                    DockPanel.Dock="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            x:Name="LibraryFolderButtonImage"
                                            Width="32"
                                            Height="32"
                                            Margin="5"
                                            Source="/Resources/Button Images/Office-2016/File-Open.png" />
                                        <Label VerticalContentAlignment="Center" Content="Open" />
                                    </StackPanel>
                                </Button>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Text="This folder is where Chem4Word stores your library."
                                    TextWrapping="Wrap" />
                            </DockPanel>
                        </GroupBox>
                        <GroupBox
                            BorderBrush="{StaticResource Chem4WordBlue}"
                            BorderThickness="2"
                            Header="Plug-Ins">
                            <DockPanel>
                                <Button
                                    x:Name="PlugInsFolder"
                                    Width="120"
                                    Height="50"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Left"
                                    Click="OnClick_PlugInsFolder"
                                    DockPanel.Dock="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            x:Name="PlugInsFolderButtonImage"
                                            Width="32"
                                            Height="32"
                                            Margin="5"
                                            Source="/Resources/Button Images/Office-2016/File-Open.png" />
                                        <Label VerticalContentAlignment="Center" Content="Open" />
                                    </StackPanel>
                                </Button>
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Text="This folder is where the Chem4Word Plug-Ins are installed."
                                    TextWrapping="Wrap" />
                            </DockPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel
            Grid.Row="1"
            Margin="10,0,10,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="Defaults"
                Width="80"
                Height="32"
                Margin="5,5,30,5"
                VerticalAlignment="Center"
                Click="DefaultsButton_OnClick"
                Content="Defaults" />
            <Button
                x:Name="Ok"
                Width="80"
                Height="32"
                Margin="5"
                VerticalAlignment="Center"
                Click="OkButton_Click"
                Content="OK" />
            <Button
                x:Name="Cancel"
                Width="80"
                Height="32"
                Margin="5"
                VerticalAlignment="Center"
                Click="CancelButton_OnClick"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</UserControl>