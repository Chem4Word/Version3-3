<Window
    x:Class="Wpf.UI.Sandbox.Forms.CompassTesting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Chem4Word.ACME.Controls;assembly=Chem4Word.ACME"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ThisWindow"
    Title="Testing of Compass Control"
    Width="600"
    Height="400"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="124" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="124" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="124" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="124" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <controls:Compass
            x:Name="Compass1"
            Grid.Row="1"
            Grid.Column="1"
            CompassControlType="Hydrogens"
            CompassValueChanged="OnCompassValueChanged_Compass" />

        <TextBlock
            x:Name="Status1"
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2">
            Compass #1
        </TextBlock>

        <controls:Compass
            x:Name="Compass2"
            Grid.Row="1"
            Grid.Column="3"
            CompassControlType="FunctionalGroups"
            CompassValueChanged="OnCompassValueChanged_Compass" />

        <TextBlock
            x:Name="Status2"
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="2">
            Compass #2
        </TextBlock>

        <controls:Compass
            x:Name="Compass3"
            Grid.Row="1"
            Grid.Column="5"
            CompassControlType="Electrons"
            CompassValueChanged="OnCompassValueChanged_Compass" />

        <TextBlock
            x:Name="Status3"
            Grid.Row="2"
            Grid.Column="5"
            Grid.ColumnSpan="2">
            Compass #3
        </TextBlock>
    </Grid>
</Window>
