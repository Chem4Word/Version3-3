<Window
    x:Class="Wpf.UI.Sandbox.Forms.FormulaTesting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ACME="clr-namespace:Chem4Word.ACME;assembly=Chem4Word.ACME"
    xmlns:controls="clr-namespace:Chem4Word.ACME.Controls;assembly=Chem4Word.ACME"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Formula Testing"
    Width="1500"
    Height="600"
    Loaded="OnLoaded_FormulaTesting"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <ACME:Editor
            x:Name="Editor"
            Grid.Row="0"
            Grid.Column="0"
            Width="Auto"
            Height="Auto"
            ShowFeedback="False" />
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Width="100"
                Click="OnClick_LoadButton"
                Content="Load" />
            <Button
                Grid.Column="1"
                Width="100"
                Click="OnClick_Formula"
                Content="Show Formula" />
        </Grid>
        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1">
            <Grid Background="LightGray">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Vertical">
                    <TextBlock
                        x:Name="Concise"
                        Margin="3"
                        Padding="3"
                        Background="White"
                        FontSize="18"
                        Text="..." />
                    <TextBlock
                        x:Name="ConciseCompact"
                        Margin="3"
                        Padding="3"
                        Background="White"
                        FontSize="18"
                        Text="..." />
                    <controls:FormulaBlock
                        x:Name="Unicode"
                        Margin="3"
                        Padding="3"
                        Background="White"
                        FontSize="18"
                        Text="..." />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
