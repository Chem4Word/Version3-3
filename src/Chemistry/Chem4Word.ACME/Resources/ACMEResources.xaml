                        Height="15"
                        Stroke="{StaticResource GrabHandleBorderBrush}">
                        <Ellipse.Fill>
                            <StaticResource ResourceKey="GrabHandleBorderBrush" />
                        </Ellipse.Fill>
                    </Ellipse>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

