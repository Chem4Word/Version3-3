    <Style x:Key="AtomThumb" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="Background" Value="{StaticResource GrabHandleFillBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource GrabHandleBorderBrush}" />
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Ellipse
                        Width="12"
                        Height="12"
                        Fill="{StaticResource GrabHandleFillBrush}"
                        Stroke="{StaticResource GrabHandleBorderBrush}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GrabHandleStyle" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="Background" Value="{StaticResource ThumbFillBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource GrabHandleBorderBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Ellipse Fill="{x:Static SystemColors.WindowBrush}" Stroke="{StaticResource GrabHandleBorderBrush}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="BigThumbStyle"
        BasedOn="{StaticResource GrabHandleStyle}"
        TargetType="Thumb">
        <Setter Property="Background" Value="{StaticResource ThumbFillBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="{StaticResource ThumbFillBrush}" Stroke="{StaticResource GrabHandleBorderBrush}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="GroupHandleStyle"
        BasedOn="{StaticResource GrabHandleStyle}"
        TargetType="Thumb">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle
                        Fill="{x:Static SystemColors.WindowBrush}"
                        Stroke="{StaticResource GrabHandleBorderBrush}"
                        StrokeThickness="2" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="MolAdornerStyle"
        BasedOn="{StaticResource GrabHandleStyle}"
        TargetType="Thumb">
        <Setter Property="Opacity" Value="0.15" />
    </Style>

    <Style x:Key="RotateThumb" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="Background" Value="{StaticResource GrabHandleFillBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource GrabHandleBorderBrush}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Viewbox
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        Stretch="Uniform">

                        <Canvas
                            Width="38"
                            Height="38"
                            Margin="0"
                            Background="Transparent">
                            <Path
                                Width="38"
                                Height="38"
                                Data="M 57 57 L 42 57 L 42 42 L 47.19 47.19 C 49.54 44.84 51 41.59 51 38 C 51 30.82 45.18 25 38 25 C 30.82 25 25 30.82 25 38 C 25 42.61 27.4 46.67 31.03 48.97 L 26.71 53.29 C 22.03 49.83 19 44.27 19 38 C 19 27.51 27.51 19 38 19 C 48.49 19 57 27.51 57 38 C 57 43.25 54.87 48 51.44 51.44 L 57 57 Z"
                                Fill="{StaticResource GrabHandleBorderBrush}"
                                Stretch="Fill" />
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PivotStyle" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="Background" Value="{StaticResource GrabHandleFillBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource GrabHandleBorderBrush}" />
        <Setter Property="Template">
            <Setter.Value>
