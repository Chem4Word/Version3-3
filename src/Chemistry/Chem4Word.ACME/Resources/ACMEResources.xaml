    <ControlTemplate x:Key="BulletTemplate" TargetType="{x:Type ContentControl}">
        <BulletDecorator Margin="3">
            <BulletDecorator.Bullet>
                <Ellipse
                    Width="6"
                    Height="6"
                    Margin="0,1.5,0,0"
                    Fill="#FFF15207" />
            </BulletDecorator.Bullet>
            <ContentPresenter />
        </BulletDecorator>
    </ControlTemplate>

    <Style x:Key="BulletBody" TargetType="{x:Type TextBlock}">
        <Setter Property="TextWrapping" Value="WrapWithOverflow" />
        <Setter Property="Padding" Value="5,0,0,0" />
    </Style>

    <Style x:Key="ToolTipHeader" TargetType="{x:Type Label}">
        <Setter Property="Background" Value="#FFBD3907" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#FFF7F1E3" />
    </Style>

    <Style TargetType="{x:Type ToolTip}">
        <Setter Property="Background" Value="#FFF7F1E3" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style TargetType="selectors:BaseSelectionAdorner">
        <Setter Property="ToolTip">
            <Setter.Value>
                <ToolTip>
                    <StackPanel>
                        <Label Style="{StaticResource ToolTipHeader}">Object selected</Label>
                        <ContentControl Template="{StaticResource BulletTemplate}">
                            <TextBlock Padding="1">Grab this adorner and drag to move</TextBlock>
                        </ContentControl>
                        <ContentControl Template="{StaticResource BulletTemplate}">
                            <TextBlock Padding="1">Hit [Del] to delete</TextBlock>
                        </ContentControl>
                    </StackPanel>
                </ToolTip>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="selectors:ReactionSelectionAdorner">
        <Setter Property="ToolTip">
            <Setter.Value>
                <ToolTip>
                    <StackPanel>
                        <Label Style="{StaticResource ToolTipHeader}">Reaction selected</Label>
                        <ContentControl Template="{StaticResource BulletTemplate}">
                            <TextBlock Padding="1">Select an arrow to change the reaction type</TextBlock>
                        </ContentControl>
                        <ContentControl Template="{StaticResource BulletTemplate}">
                            <TextBlock Padding="1">Drag the arrow to move the reaction</TextBlock>
                        </ContentControl>
                        <ContentControl Template="{StaticResource BulletTemplate}">
                            <TextBlock Padding="1">Drag the arrow ends to resize/realign</TextBlock>
                        </ContentControl>
