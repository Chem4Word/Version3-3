<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:acme="clr-namespace:Chem4Word.ACME"
    xmlns:graphics="clr-namespace:Chem4Word.ACME.Graphics"
    xmlns:selectors="clr-namespace:Chem4Word.ACME.Adorners.Selectors">

    <!--  Simple shapes for use in menus, buttons etc  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml" />
        <ResourceDictionary Source="BondOptions.xaml" />
        <ResourceDictionary Source="ReactionOptions.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  standard livery for Chem4Word  -->
    <SolidColorBrush x:Key="Chem4WordBlue" Color="#2A579A" />
    <SolidColorBrush x:Key="Chem4WordRed" Color="#C92626" />
    <SolidColorBrush x:Key="Chem4WordGreen" Color="#1A6D1A" />
    <SolidColorBrush x:Key="PinkLace" Color="#FFDDF4" />
    <SolidColorBrush x:Key="ACMEToolbarBackground" Color="#F1F1F1" />
    <SolidColorBrush
        x:Key="DiagnosticOverlay"
        Opacity="0.5"
        Color="PaleGreen" />

    <!--
        Fix weird binding errors
        We need to define these two properties twice to fix binding errors see answer which I [Mike Williams] have commented on at
        https://stackoverflow.com/questions/160391/listbox-with-grid-as-itemspaneltemplate-produces-weird-binding-errors
    -->
    <Style TargetType="{x:Type ComboBoxItem}">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
    </Style>
    <Style TargetType="{x:Type ListBoxItem}">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
    </Style>
    <Style TargetType="{x:Type TreeViewItem}">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
    </Style>
    <Style TargetType="{x:Type acme:AtomOption}">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="FontWeight" Value="DemiBold" />
    </Style>

    <Style x:Key="WedgeBondStyle" TargetType="Path">
        <Setter Property="Fill" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
        <Setter Property="Height" Value="14" />
        <Setter Property="Stroke" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
        <Setter Property="Width" Value="25" />
        <Setter Property="Data" Value="M 0,7 L 25,10 l 0 -7 Z" />
    </Style>

    <!--  Reaction handling brushes  -->
    <SolidColorBrush x:Key="ReactantIndicatorBrush" Color="DarkBlue" />
    <SolidColorBrush x:Key="ProductIndicatorBrush" Color="DarkRed" />
    <SolidColorBrush x:Key="ArrowIndicatorBrush" Color="Black" />
    <SolidColorBrush
        x:Key="IndicatorBackgroundBrush"
        Opacity="0.75"
        Color="White" />

    <!--  styles for bond fills  -->
    <SolidColorBrush x:Key="BlockedAdornerBrush" Color="LightGray" />

    <LinearGradientBrush x:Key="HatchBondBrush" MappingMode="Absolute" SpreadMethod="Repeat" StartPoint="50,0" EndPoint="50,5">
        <GradientStop Offset="0" Color="{x:Static SystemColors.WindowColor}" />
        <GradientStop Offset="0.1" Color="{x:Static SystemColors.WindowColor}" />
        <GradientStop Offset="0.1" Color="Transparent" />
        <GradientStop Offset="0.2" Color="Transparent" />
    </LinearGradientBrush>

    <Style
        x:Key="HatchBondStyle"
        BasedOn="{StaticResource WedgeBondStyle}"
        TargetType="Path">
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush MappingMode="Absolute" SpreadMethod="Repeat" StartPoint="50,0" EndPoint="50,5">
                    <GradientStop Offset="0" Color="{x:Static SystemColors.WindowTextColor}" />
                    <GradientStop Offset="0.2" Color="{x:Static SystemColors.WindowTextColor}" />
                    <GradientStop Offset="0.2" Color="Transparent" />
                    <GradientStop Offset="0.4" Color="Transparent" />
                    <LinearGradientBrush.Transform>
                        <RotateTransform Angle="90" />
                    </LinearGradientBrush.Transform>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke" Value="{x:Null}" />
    </Style>

    <Style x:Key="RingButtonGraphic" TargetType="{x:Type Path}">
        <Setter Property="Height" Value="25" />
        <Setter Property="Width" Value="25" />
        <Setter Property="Stroke" Value="{StaticResource ResourceKey=Chem4WordBlue}" />
