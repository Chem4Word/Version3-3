<Window
    x:Class="Chem4Word.ACME.Controls.MoleculePropertyEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:acme="clr-namespace:Chem4Word.ACME"
    xmlns:converters="clr-namespace:Chem4Word.ACME.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chem4Word.ACME.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Molecule Properties"
    Width="800"
    Height="500"
    Closing="OnClosing_MoleculePropertyEditor"
    ContentRendered="OnContentRendered_MoleculePropertyEditor"
    Icon="/Chem4Word.ACME;component/Resources/ms-word-16.ico"
    Loaded="OnLoaded_MoleculePropertyEditor"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <converters:ValueToForegroundColorConverter x:Key="PositiveConverter" />
            <converters:ValueToString x:Key="RadicalConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/ACMEResources.xaml" />
                <ResourceDictionary Source="../Resources/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Margin="3" d:IsLocked="True">
        <Grid d:IsLocked="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Molecule Path  -->
            <TextBlock
                x:Name="MoleculePath"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                d:IsLocked="True"
                Foreground="Black"
                Visibility="Collapsed">
                Molecule Path
            </TextBlock>

            <!--  Tabs for properties and labels  -->
            <TabControl
                x:Name="TabControl"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                d:IsLocked="True">
                <TabItem
                    x:Name="Properties"
                    d:IsLocked="True"
                    Header="Properties">
                    <Grid d:IsLocked="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="5"
                            d:IsLocked="True"
                            BorderBrush="DarkOrange"
                            BorderThickness="3"
                            CornerRadius="5">
                            <acme:Display
                                x:Name="Preview"
                                Margin="3"
                                d:IsLocked="True"
                                Background="White"
                                HighlightActive="False" />
                        </Border>
                        <Grid
                            Grid.Row="0"
                            Grid.Column="1"
                            d:IsLocked="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid
                                Grid.Row="0"
                                Margin="5,0,0,0"
                                d:IsLocked="True">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    d:IsLocked="True"
                                    Style="{StaticResource Acme.Controls.TextBlock.StdLabel}"
                                    Text="Charge" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    d:IsLocked="True"
                                    Style="{StaticResource Acme.Controls.TextBlock.StdLabel}"
                                    Text="Radical" />
                                <ComboBox
                                    x:Name="ChargeValues"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Width="75"
                                    Height="30"
                                    VerticalContentAlignment="Center"
                                    d:IsLocked="True"
                                    ItemsSource="{Binding Charges}"
                                    SelectedValue="{Binding Charge, Mode=TwoWay}"
                                    SelectedValuePath="Value"
                                    SelectionChanged="OnSelectionChanged_ChargeValues"
                                    Style="{StaticResource StandardCombo}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Foreground="{Binding Value, Converter={StaticResource PositiveConverter}}" Text="{Binding Label}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <ComboBox
                                    x:Name="SpinMultiplicityValues"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="75"
                                    Height="30"
                                    VerticalContentAlignment="Center"
                                    d:IsLocked="True"
                                    ItemsSource="{Binding MultiplicityValues}"
                                    SelectedValue="{Binding SpinMultiplicity, Mode=TwoWay}"
                                    SelectedValuePath="Value"
                                    SelectionChanged="OnSelectionChanged_SpinMultiplicityValues"
                                    Style="{StaticResource StandardCombo}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Foreground="{Binding Value, Converter={StaticResource RadicalConverter}}" Text="{Binding Label}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    d:IsLocked="True"
                                    Style="{StaticResource Acme.Controls.TextBlock.StdLabel}"
                                    Text="Count" />
                                <Grid
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    d:IsLocked="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox
                                        x:Name="CountSpinner"
                                        Grid.Column="0"
                                        Width="40"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Right"
                                        d:IsLocked="True"
                                        Style="{StaticResource Acme.Controls.TextBox}"
                                        Text="{Binding Count, Mode=TwoWay}"
                                        TextChanged="OnTextChanged_CountSpinner"
                                        ToolTip="Set count" />
                                    <Grid
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        d:IsLocked="True">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <RepeatButton
                                            x:Name="IncreaseButton"
                                            Grid.Row="0"
                                            Width="16"
                                            Height="9"
                                            VerticalAlignment="Bottom"
                                            d:IsLocked="True"
                                            BorderThickness="0"
                                            Click="OnClick_CountSpinnerIncreaseButton"
                                            Focusable="False"
                                            ToolTip="Increment by 1">
                                            <Path
                                                d:IsLocked="True"
                                                Data="M 0 20 L 35 -20 L 70 20 Z"
                                                Fill="Black"
                                                Stretch="Uniform" />
                                        </RepeatButton>
                                        <RepeatButton
                                            x:Name="DecreaseButton"
                                            Grid.Row="1"
                                            Width="16"
                                            Height="9"
                                            VerticalAlignment="Top"
                                            d:IsLocked="True"
                                            BorderThickness="0"
                                            Click="OnClick_CountSpinnerDecreaseButton"
                                            Focusable="False"
                                            ToolTip="Decrement by 1">
                                            <Path
                                                d:IsLocked="True"
                                                Data="M 0 0 L 35 40 L 70 0 Z"
                                                Fill="Black"
                                                Stretch="Uniform" />
                                        </RepeatButton>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1" d:IsLocked="True">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <CheckBox
                                    x:Name="ShowBracketsValue"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="5,0,0,0"
                                    VerticalContentAlignment="Center"
                                    d:IsLocked="True"
                                    Click="OnClick_ShowBrackets"
                                    IsChecked="{Binding ShowMoleculeBrackets}"
                                    IsThreeState="True">
                                    <TextBlock d:IsLocked="True" Style="{StaticResource Acme.Controls.TextBlock.StdLabel}">Show Molecule Brackets</TextBlock>
                                </CheckBox>
                                <CheckBox
                                    x:Name="ShowAllCarbonAtoms"
                                    Grid.Row="1"
                                    Margin="5,0,0,0"
                                    VerticalContentAlignment="Center"
                                    d:IsLocked="True"
                                    Click="OnClick_ExplicitC"
                                    IsChecked="{Binding Path=ExplicitC, Mode=TwoWay}"
                                    IsThreeState="True">
                                    <TextBlock d:IsLocked="True" Style="{StaticResource Acme.Controls.TextBlock.StdLabel}">Show All Carbon Atoms</TextBlock>
                                </CheckBox>
                            </Grid>
                            <Grid
                                Grid.Row="2"
                                Margin="5,0,0,0"
                                d:IsLocked="True">
                                <Grid d:IsLocked="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        d:IsLocked="True"
                                        Style="{StaticResource Acme.Controls.TextBlock.StdLabel}">
                                        Implicit Hydrogen Mode
                                    </TextBlock>
                                    <ComboBox
                                        x:Name="ImplicitHydrogenMode"
                                        Grid.Column="1"
                                        Height="30"
                                        Margin="5,0,5,0"
                                        VerticalContentAlignment="Center"
                                        d:IsLocked="True"
                                        SelectionChanged="OnSelectionChanged_ImplicitHydrogenMode" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem
                    x:Name="Labels"
                    Height="22"
                    VerticalAlignment="Top"
                    d:IsLocked="True"
                    Header="Labels">
                    <acme:LabelsEditor
                        x:Name="LabelsEditor"
                        d:IsLocked="True"
                        ShowTopPanel="False" />
                </TabItem>
            </TabControl>

            <!--  Lastly the Save and Cancel buttons  -->
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Right"
                d:IsLocked="True"
                Orientation="Horizontal">
                <Button
                    d:IsLocked="True"
                    Click="OnClick_Save"
                    Content="OK"
                    Style="{StaticResource Acme.Control.Button.DialogButton}" />
                <Button
                    d:IsLocked="True"
                    Click="OnClick_Close"
                    Content="Cancel"
                    Style="{StaticResource Acme.Control.Button.DialogButton}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>