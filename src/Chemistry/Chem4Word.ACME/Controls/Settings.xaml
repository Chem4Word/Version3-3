<UserControl
    x:Class="Chem4Word.ACME.Controls.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:acme="clr-namespace:Chem4Word.ACME"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chem4Word.ACME.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="AcmeSettings_OnLoaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/ACMEResources.xaml" />
                <ResourceDictionary Source="../Resources/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="TabControl">
                <Setter Property="FontSize" Value="14" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TabControl
            Grid.Row="0"
            Margin="5"
            Background="{DynamicResource {x:Static SystemColors.ControlColor}}">
            <TabItem Header="General">
                <Grid>
                    <StackPanel>
                        <GroupBox BorderThickness="2" Header="Common">
                            <Grid Height="64">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--  Show Atoms in Colour  -->
                                <CheckBox
                                    Grid.Column="0"
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Click="ShowAtomsInColour_OnClick"
                                    IsChecked="{Binding Path=ShowAtomsInColour, Mode=TwoWay}">
                                    Show Atoms in Colour
                                </CheckBox>

                                <!--  Show Implicit Hydrogens  -->
                                <CheckBox
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Click="ShowImplicitHydrogens_OnClick"
                                    IsChecked="{Binding Path=ShowImplicitHydrogens, Mode=TwoWay}">
                                    Show Implicit Hydrogens
                                </CheckBox>

                                <!--  Show All Carbon Atoms  -->
                                <CheckBox
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Click="ShowAllCarbonAtoms_OnClick"
                                    IsChecked="{Binding Path=ShowAllCarbonAtoms, Mode=TwoWay}">
                                    Show All Carbon Atoms
                                </CheckBox>
                            </Grid>
                        </GroupBox>
                        <GroupBox BorderThickness="2" Header="Display Only">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />

                                </Grid.RowDefinitions>
                                <!--  Show Grouping of Molecules  -->
                                <CheckBox
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Click="ShowMoleculeGroups_OnClick"
                                    IsChecked="{Binding Path=ShowMoleculeGroups, Mode=TwoWay}">
                                    Show grouping of molecules
                                </CheckBox>
                            </Grid>
                        </GroupBox>
                        <GroupBox BorderThickness="2" Header="Editor Only">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />

                                </Grid.RowDefinitions>
                                <!--  Bond Length (DropDown)  -->
                                <ComboBox
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Width="50"
                                    Margin="5"
                                    ItemsSource="{StaticResource AllowedBondLengths}"
                                    SelectedValue="{Binding Path=CurrentBondLength, Mode=TwoWay}"
                                    SelectedValuePath="Content"
                                    SelectionChanged="DefaultBondLength_OnSelectionChanged"
                                    ToolTip="Set Default Bond Length" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    VerticalAlignment="Center">
                                    Default Bond Length
                                </TextBlock>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem x:Name="DebugTab" Header="Debug">
                <Grid>
                    <StackPanel HorizontalAlignment="Stretch">
                        <TextBlock Margin="3">
                            Settings Path:
                        </TextBlock>
                        <TextBlock
                            x:Name="SettingsPath"
                            Margin="3"
                            HorizontalAlignment="Stretch"
                            Text="{Binding Path=SettingsPath, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!--  Buttons  -->
        <Grid
            Grid.Row="1"
            Width="Auto"
            MinWidth="250"
            Margin="0,0,0,5"
            HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--  Defaults Button  -->
            <Button
                Margin="5,0,40,0"
                Click="Defaults_OnClick"
                Content="Defaults"
                FontSize="14"
                Style="{StaticResource Acme.Control.Button.DialogButton}" />
            <Button
                Grid.Column="1"
                Click="Save_OnClick"
                Content="OK"
                FontSize="14"
                Style="{StaticResource Acme.Control.Button.DialogButton}" />
            <!--  Cancel Button  -->
            <Button
                Grid.Column="2"
                Click="Cancel_OnClick"
                Content="Cancel"
                Margin="0,0,5,0"
                FontSize="14"
                Style="{StaticResource Acme.Control.Button.DialogButton}" />
            <!--  Save Button  -->
        </Grid>
    </Grid>
</UserControl>