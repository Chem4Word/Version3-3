<UserControl
    x:Class="Chem4Word.ACME.Controls.Compass"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:compassControl="clr-namespace:Chem4Word.ACME.Converters.CompassControl"
    xmlns:controls="clr-namespace:Chem4Word.ACME.Controls"
    xmlns:coreEnums="clr-namespace:Chem4Word.Core.Enums;assembly=Chem4Word.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AcmeCompass"
    d:DesignHeight="124"
    d:DesignWidth="124"
    Loaded="OnLoaded_Compass"
    mc:Ignorable="d">

    <UserControl.Resources>
        <compassControl:CompassTypeToVisibility x:Key="VisibilityConvertor" />
        <compassControl:CompassTypeInverseToVisibility x:Key="InverseVisibilityConvertor" />
    </UserControl.Resources>

    <Grid d:IsLocked="True">
        <Grid
            x:Name="Grid1"
            d:IsLocked="True"
            IsVisibleChanged="OnIsVisibleChanged_Grid1"
            Visibility="{Binding ElementName=AcmeCompass, Path=CompassControlType, Converter={StaticResource InverseVisibilityConvertor}}">

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>

            <controls:CompassButton
                x:Name="Left"
                Grid.Row="0"
                Grid.Column="0"
                d:IsLocked="True"
                ButtonContent="L"
                DefaultDirection="West"
                IsElectronsMode="False"
                Tag="{x:Static coreEnums:CompassPoints.West}"
                ValueChanged="OnValueChanged_CompassButton" />
            <controls:CompassButton
                x:Name="Middle"
                Grid.Row="0"
                Grid.Column="2"
                d:IsLocked="True"
                ButtonContent="M"
                IsElectronsMode="False"
                Tag="Middle"
                ValueChanged="OnValueChanged_CompassButton" />
            <controls:CompassButton
                x:Name="Right"
                Grid.Row="0"
                Grid.Column="4"
                d:IsLocked="True"
                ButtonContent="R"
                DefaultDirection="East"
                IsElectronsMode="{Binding ElectronsMode}"
                Tag="{x:Static coreEnums:CompassPoints.East}"
                ValueChanged="OnValueChanged_CompassButton" />
        </Grid>

        <Grid
            x:Name="Grid2"
            d:IsLocked="True"
            IsVisibleChanged="OnIsVisibleChanged_Grid2"
            Visibility="{Binding ElementName=AcmeCompass, Path=CompassControlType, Converter={StaticResource VisibilityConvertor}}">

            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="2" />
                <RowDefinition Height="40" />
                <RowDefinition Height="2" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>

            <!--  Top Row  -->
            <controls:CompassButton
                x:Name="NorthWest"
                Grid.Row="0"
                Grid.Column="0"
                d:IsLocked="True"
                ButtonContent="NW"
                DefaultDirection="NorthWest"
                IsElectronsMode="{Binding ElectronsMode}"
                Tag="{x:Static coreEnums:CompassPoints.NorthWest}"
                ValueChanged="OnValueChanged_CompassButton" />
            <controls:CompassButton
                x:Name="North"
                Grid.Row="0"
                Grid.Column="2"
                d:IsLocked="True"
                ButtonContent="N"
                DefaultDirection="North"
                IsElectronsMode="{Binding ElectronsMode}"
                Tag="{x:Static coreEnums:CompassPoints.North}"
                ValueChanged="OnValueChanged_CompassButton" />
            <controls:CompassButton
                x:Name="NorthEast"
                Grid.Row="0"
                Grid.Column="4"
                d:IsLocked="True"
                ButtonContent="NE"
                DefaultDirection="NorthEast"
                IsElectronsMode="{Binding ElectronsMode}"
                Tag="{x:Static coreEnums:CompassPoints.NorthEast}"
                ValueChanged="OnValueChanged_CompassButton" />

            <!--  Middle Row  -->
            <controls:CompassButton
                x:Name="West"
                Grid.Row="2"
                Grid.Column="0"
                d:IsLocked="True"
                ButtonContent="W"
                DefaultDirection="West"
                IsElectronsMode="{Binding ElectronsMode}"
                Tag="{x:Static coreEnums:CompassPoints.West}"
                ValueChanged="OnValueChanged_CompassButton" />
            <controls:CompassButton
                x:Name="Centre"
                Grid.Row="2"
                Grid.Column="2"
                d:IsLocked="True"
                ButtonContent="C"
                IsElectronsMode="{Binding ElectronsMode}"
                Tag="Centre"
                ValueChanged="OnValueChanged_CompassButton" />
            <controls:CompassButton
                x:Name="East"
                Grid.Row="2"
                Grid.Column="4"
                d:IsLocked="True"
                ButtonContent="E"
                DefaultDirection="East"
                IsElectronsMode="{Binding ElectronsMode}"
                Tag="{x:Static coreEnums:CompassPoints.East}"
                ValueChanged="OnValueChanged_CompassButton" />

            <!--  Bottom Row  -->
            <controls:CompassButton
                x:Name="SouthWest"
                Grid.Row="4"
                Grid.Column="0"
                d:IsLocked="True"
                ButtonContent="SW"
                DefaultDirection="SouthWest"
                IsElectronsMode="{Binding ElectronsMode}"
                Tag="{x:Static coreEnums:CompassPoints.SouthWest}"
                ValueChanged="OnValueChanged_CompassButton" />
            <controls:CompassButton
                x:Name="South"
                Grid.Row="4"
                Grid.Column="2"
                d:IsLocked="True"
                ButtonContent="S"
                DefaultDirection="South"
                IsElectronsMode="{Binding ElectronsMode}"
                Tag="{x:Static coreEnums:CompassPoints.South}"
                ValueChanged="OnValueChanged_CompassButton" />
            <controls:CompassButton
                x:Name="SouthEast"
                Grid.Row="4"
                Grid.Column="4"
                d:IsLocked="True"
                ButtonContent="SE"
                DefaultDirection="SouthEast"
                IsElectronsMode="{Binding ElectronsMode}"
                Tag="{x:Static coreEnums:CompassPoints.SouthEast}"
                ValueChanged="OnValueChanged_CompassButton" />
        </Grid>
    </Grid>

</UserControl>
