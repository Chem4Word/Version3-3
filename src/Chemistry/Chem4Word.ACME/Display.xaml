<UserControl
    x:Class="Chem4Word.ACME.Display"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="clr-namespace:Chem4Word.ACME.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ACMEDisplay"
    mc:Ignorable="av">
    <Viewbox x:Name="Placeholder" av:IsLocked="True">
        <controls:ChemistryCanvas
            x:Name="ChemCanvas"
            Margin="5"
            av:IsLocked="True"
            Background="White"
            HighlightActive="{Binding HighlightActive, ElementName=ACMEDisplay}" />
    </Viewbox>
</UserControl>